<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_centerHorizontal="true">

    <!-- Author: Emily Black -->
    <!-- Edited: 1/11/16 -->

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/instagramBUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/instagramButton"
            android:onClick="methodToGoToInstagramWebsite"
            android:src="@drawable/instagramicon"/>

        <ImageButton
            android:id="@+id/facebookBUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/facebookButton"
            android:onClick="methodToGoToFacebookWebsite"
            android:src="@drawable/facebookicon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/youtubeBUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/youtubeButton"
            android:onClick="methodToGoToYoutubeWebsite"
            android:src="@drawable/youtubeicon"/>

        <ImageButton
            android:id="@+id/twitterBUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/twitterButton"
            android:onClick="methodToGoToTwitterWebsite"
            android:src="@drawable/twittericon"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pinterestBUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pinterestButton"
            android:onClick="methodToGoToPinterestWebsite"
            android:src="@drawable/pinteresticon"/>

        <ImageButton
            android:id="@+id/tumblrBUTTON"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/tumblrButton"
            android:onClick="methodToGoToTumblrPage"
            android:src="@drawable/tumblricon"/>

    </LinearLayout>
</LinearLayout>