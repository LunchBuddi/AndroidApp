<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:weightSum="1">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/socialmediaButton"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:src="@drawable/socialmediabanner"
        android:layout_gravity="top"
        android:focusableInTouchMode="false"
        android:id="@+id/banner1"
        />

    <!-- FIRST ROW OF BUTTONS -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1"
        android:id="@+id/linearlayout1"
        android:layout_below="@+id/banner1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        >

        <ImageButton
            android:id="@+id/instagramBUTTON"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/instagramButton"
            android:src="@drawable/instagramicon"
            android:onClick="methodToGoToInstagramWebsite"/>

        <ImageButton
            android:id="@+id/facebookBUTTON"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/facebookButton"
            android:src="@drawable/facebookicon"
            android:onClick="methodToGoToFacebookWebsite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linearlayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:weightSum="1"
        android:id="@+id/linearlayout2"
        >

        <ImageButton
            android:id="@+id/youtubeBUTTON"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/youtubeButton"
            android:src="@drawable/youtubeicon"
            android:onClick="methodToGoToYoutubeWebsite"/>

        <ImageButton
            android:id="@+id/twitterBUTTON"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/twitterButton"
            android:src="@drawable/twittericon"
            android:onClick="methodToGoToTwitterWebsite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linearlayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:weightSum="1"
        android:id="@+id/linearlayout3">

        <ImageButton
            android:id="@+id/pinterestBUTTON"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pinterestButton"
            android:src="@drawable/pinteresticon"
            android:onClick="methodToGoToPinterestWebsite"/>

        <ImageButton
            android:id="@+id/tumblrBUTTON"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/tumblrButton"
            android:src="@drawable/tumblricon"
            android:onClick="methodToGoToTumblrPage"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1"
        android:id="@+id/linearlayout4">

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/backtoHomeButton"
            android:layout_marginBottom="10dp"
            android:id="@+id/backtoHomeButton"
            android:gravity="center"
            android:onClick="methodToGoToHomepage" />
        </LinearLayout>

</RelativeLayout>