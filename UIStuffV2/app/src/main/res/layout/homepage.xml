<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homepage"
    android:weightSum="1">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:id="@+id/topbarlogo"
            android:src="@mipmap/mainpagetopimage"
            android:layout_gravity="top"
            android:focusableInTouchMode="false"
            android:layout_row="0"
            android:layout_column="0"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            >

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/registerpage2" android:layout_width="match_parent"
                android:layout_height="425dp"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:weightSum="1"
                >


            </LinearLayout>
        </ScrollView>

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:columnCount="4"
            android:rowCount="1"
            tools:context=".GridXMLActivity" >

            <ImageView
                android:id="@+id/image1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/mapbutton"
                 />

            <ImageView
                android:id="@+id/image2"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/findlunchbutton"
                 />

            <ImageView
                android:id="@+id/image3"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/socialmediabutton"
                 />

            <ImageView
                android:id="@+id/image4"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/settingsbutton"
                 />

        </GridLayout>
    </GridLayout>

</LinearLayout>