<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homepage"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/topbarlogo"
        android:src="@mipmap/mainpagetopimage"
        android:layout_gravity="top"
        android:focusableInTouchMode="false"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/registerpage2" android:layout_width="match_parent"
        android:layout_height="425dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1"
        >


</LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:columnCount="4"
        android:rowCount="1"
        tools:context=".GridXMLActivity" >

        <ImageView
            android:id="@+id/image1"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="90dp"
            android:src="@mipmap/mapbutton"
             />

        <ImageView
            android:id="@+id/image2"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="90dp"
            android:src="@mipmap/findlunchbutton"
             />

        <ImageView
            android:id="@+id/image3"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_width="90dp"
            android:src="@mipmap/socialmediabutton"
             />

        <ImageView
            android:id="@+id/image4"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_width="90dp"
            android:src="@mipmap/settingsbutton"
             />

    </GridLayout>

</LinearLayout>