<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="fill_horizontal"
    android:weightSum="1">

    <ImageView
        android:contentDescription="@string/Register_Account_Banner"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="fill_horizontal"
        android:focusableInTouchMode="false"
        android:src="@drawable/registeraccountbanner"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="25dp"
            android:weightSum="1"
            >

            <EditText
                android:id="@+id/newFullName"
                style="@style/registerPage1Style"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lines="1"
                android:hint="@string/Full_Name"
                android:layout_weight="0.10"
                android:inputType="textPersonName"
               />

            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/newOuEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="0.10"
                android:layout_gravity="center_horizontal"
                android:hint="@string/OU_Email"
                android:inputType="textEmailAddress" />

            <Spinner
                android:layout_marginBottom="10dp"
                android:id="@+id/spinnerForMajors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:hint="@string/Chosen_Major"
                />

            <Spinner
                android:layout_marginBottom="10dp"
                android:id="@+id/spinnerForGradYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:hint="@string/Graduation_Year"
                />

            <EditText
                android:layout_marginBottom="10dp"
                android:id="@+id/newPassWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:lines="1"
                android:layout_weight="0.10"
                android:hint="@string/New_Password"
                android:inputType="textPassword" />

            <Button
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Next_Page"
                android:id="@+id/buttonToRegisterPage2"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.15"
                android:onClick="MethodToGoToRegisterPage2" />

    </LinearLayout>
</LinearLayout>
