<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:contentDescription="@string/MAINLOGO"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/TransparentLogo"/>
    <!-- We're not quite sure who owns this ^ image. Check with Adrienne -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:id="@+id/ouEmailInput"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/OU_Email"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:id="@+id/passWordInput"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="@string/Password"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:id="@+id/verificationCode"
            android:maxLines="1"
            android:inputType="number"
            android:hint="@string/Verification_Code"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/Login"
            android:layout_marginBottom="10dp"
            android:id="@+id/loginButton"
            android:layout_gravity="center_horizontal"
            android:onClick="methodToGoToHomepage" />

    </LinearLayout>
</LinearLayout>