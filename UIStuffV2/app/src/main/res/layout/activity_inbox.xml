<!-- INBOX -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:id="@+id/inboxbanner"
        android:contentDescription="@string/Home_Banner"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:src="@drawable/inboxbanner"
        android:layout_gravity="top"
        android:focusableInTouchMode="false"
        />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewForInbox"
        android:layout_below="@+id/inboxbanner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button_container_inbox"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_container_inbox"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true">

        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backtoHomeButton"
            android:id="@+id/backtoHomeButton"
            android:gravity="center"
            android:onClick="methodToGoToHomepage" />

        <Button
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="methodToGoToCreateMessagePage"
            android:id="@+id/createMessagePage"
            android:text="@string/createMessagePage"/>

    </LinearLayout>
</RelativeLayout>
