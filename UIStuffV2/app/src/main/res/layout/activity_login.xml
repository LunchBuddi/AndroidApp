<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- Login progress -->
    <!-- Refer to strings.xml for text references -->
    <!-- ID values go in R.java -->

    <ImageView
        android:layout_width="375dp"
        android:layout_height="265dp"
        android:id="@+id/logo"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="top"
        android:src="@mipmap/TransparentLogo"/>
    <!-- We're not quite sure who owns this ^ image. Check with Adrienne -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:id="@+id/ouEmail"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="@string/OU_Email"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <EditText
            android:layout_width="344dp"
            android:layout_height="52dp"
            android:id="@+id/passWord"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="@string/Password"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:text="@string/Login"
            android:id="@+id/login"
            android:layout_gravity="center_horizontal"
            android:onClick="methodToGoToHomepage"
            android:layout_weight="1.18" />

        <Button
            style="?android:textAppearanceSmall"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginLeft="15dp"
            android:text="@string/Register"
            android:id="@+id/register"
            android:layout_gravity="center_horizontal"
            android:onClick="methodToGoToRegisterPage1"
            android:layout_weight="1.43" />

    </LinearLayout>
</LinearLayout>



