<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical" android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity"
    android:weightSum="1" android:id="@+id/startup">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" android:visibility="gone" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/TransparentLogo" />
    <!-- We're not quite sure who owns this ^ image. Check with Adrienne -->


    <AutoCompleteTextView android:id="@+id/email" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="OU Email"
        android:inputType="textEmailAddress" android:maxLines="1"
        android:singleLine="true" android:layout_weight="0.20"
        />

    <EditText
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Password"
        android:maxLines="1"
        android:layout_weight="0.20"
        android:password="true"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal" />


    <TextView
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.24"
        android:maxLines="1"
        android:layout_gravity="center_horizontal"
        android:text="Verification Code"
        android:id="@+id/verificationCode" />

    <Button
        style="?android:textAppearanceSmall"
        android:textStyle="bold"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/login"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:onClick="methodToGoToHomepage"/>

</LinearLayout>